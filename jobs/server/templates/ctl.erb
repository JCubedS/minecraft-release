#!/bin/bash

RUN_DIR=/var/vcap/sys/run/server
LOG_DIR=/var/vcap/sys/log/server
PIDFILE=${RUN_DIR}/pid
SERVER_DIR=/var/vcap/packages/mc-server

export JAVA_HOME=/var/vcap/packages/java
export PATH=$JAVA_HOME/bin:$PATH
export PATH=/var/vcap/packages/screen/bin:$PATH

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    cd ${SERVER_DIR}

    screen -r mcs -X quit || true
    screen -d -m -S mcs
    screen -r mcs -X logfile $LOG_DIR/server.log
    screen -r mcs -X log on
    screen -r mcs -X stuff "./ServerStart.sh
"
    sleep 5
    pgrep -n 'java' > $PIDFILE
    ;;

  stop)
    screen -rx mcs -X stuff "/stop\n"
    sleep 10
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
