#!/bin/bash

set -e

RUN_DIR=/var/vcap/sys/run/server
LOG_DIR=/var/vcap/sys/log/server

PIDFILE=${RUN_DIR}/pid

SERVER_DIR=/var/vcap/jobs/server/packages/mc-server
WORLD_DIR=/var/vcap/store/server/world
export JAVA_HOME=/var/vcap/jobs/server/packages/java
export PATH=$JAVA_HOME/bin:$PATH
export PATH=/var/vcap/jobs/server/packages/screen/bin:$PATH

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR $WORLD_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR $WORLD_DIR

    cd ${SERVER_DIR}

    if [ ! -d "world" ]; then
        ln -s ${WORLD_DIR} world
    fi

    screen -r mcs -X quit || true
    screen -d -m -S mcs
    screen -r mcs -X logfile $LOG_DIR/server.log
    screen -r mcs -X log on
    screen -r mcs -X stuff "./ServerStart.sh
"
    sleep 5
    pgrep -n 'java' > $PIDFILE
    ;;

  stop)
    screen -rx mcs -X stuff "/stop\n"
    sleep 10
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
